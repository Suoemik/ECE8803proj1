<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFF2FEFF">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageButton"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_marginTop="74dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <ImageButton
        android:layout_width="70dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/home_icon"
        android:id="@+id/imageButton2"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="5dp"
        android:background=""/>

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/busern_btn"
        android:layout_width="400dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_below="@+id/busern_btn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/bpass_btn"
        android:layout_width="400dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/textView13"
        android:layout_below="@+id/bpass_btn"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/bphone_btn"
        android:layout_width="400dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Location Services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textView14"
        android:layout_below="@+id/bphone_btn"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/bloc_btn"
        android:layout_width="400dp"
        android:layout_below="@+id/textView14"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Default Payment Method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/bloc_btn"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/df_pyment_btn"
        android:layout_width="400dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true" />

    <Button
        android:text="LOG OUT"
        android:id="@+id/button2"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textSize="20sp"
        android:layout_height="35dp"
        android:layout_width="400dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView14"
        android:layout_marginRight="110dp"
        android:background="@color/colorAccent"/>

</RelativeLayout>