<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2FEFF">

    <ScrollView
        android:id="@+id/scrollsell"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Settings"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/selsett_btn"
                android:textSize="12sp"
                android:layout_height="35dp"
                android:layout_width="85dp" />

            <Button
                android:text="Log Out"
                android:id="@+id/logout_btn"
                android:textSize="12sp"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selsett_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:id="@+id/loc_txts"
                android:textSize="20sp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:id="@+id/textView20"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                android:layout_below="@+id/loc_txts"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:id="@+id/energybid_btn"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:background="?attr/colorBackgroundFloating"
                android:layout_below="@+id/textView21"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Energy Bid Price ($/kWh)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/energybid_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:id="@+id/textView22"
                android:textSize="20sp" />

            <Button
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView22"
                android:layout_alignStart="@+id/energybid_btn"
                android:id="@+id/energyprice_btn"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:fontFamily="sans-serif"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:background="?attr/colorBackgroundFloating" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:id="@+id/switch3"
                android:text="Seller Mobility "
                android:layout_below="@+id/energyprice_btn"
                android:layout_centerHorizontal="true"
                android:textSize="20sp" />

            <TextView
                android:text="Energy Bid Amount (kWh)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="49dp"
                android:id="@+id/textView21"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_below="@+id/textView20"
                android:layout_alignStart="@+id/textView22" />

            <Button
                android:text="View Ouput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/switch3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31dp"
                android:id="@+id/output_btn" />

            <TableLayout
                android:layout_width="match_parent"
                android:id="@+id/tableinfosell"
                android:layout_height="400dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:stretchColumns="0,1"
                android:layout_below="@+id/output_btn">
            </TableLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>