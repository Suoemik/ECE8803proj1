<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFF2FEFF">
    <Button
        android:text="Profile"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button10"
        android:textSize="12sp"
        android:layout_width="75dp"
        android:layout_height="35dp" />

    <Button
        android:text="Log Out"
        android:id="@+id/button"
        android:textSize="12sp"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Energy Requirement (kWh)"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView15"
        android:layout_toEndOf="@+id/button10" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button14"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textSize="24sp"
        android:background="@android:color/transparent"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/loc_txt" />

    <TextView
        android:text="TextView"
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loc_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <Button
        android:text="Begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:id="@+id/begin_btn"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_below="@+id/button14"
        android:background="@color/colorAccent"
        android:layout_alignStart="@+id/textView15" />

    <TextView
        android:text="Location"
        android:layout_height="wrap_content"
        android:id="@+id/loc_txt"
        android:layout_marginTop="28dp"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/button10"
        android:layout_centerHorizontal="true" />

</RelativeLayout>