<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollbuy"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/relbuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Settings"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/buysett_btn"
                android:textSize="12sp"
                android:layout_height="35dp"
                android:layout_width="85dp" />

            <Button
                android:text="Log Out"
                android:id="@+id/bm_logout"
                android:textSize="12sp"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Energy Requirement (kWh)"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/textView15"
                android:layout_toEndOf="@+id/buysett_btn" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:textSize="24sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loc_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp" />

            <TextView
                android:text="Location"
                android:layout_height="wrap_content"
                android:id="@+id/loc_txt"
                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_below="@+id/buysett_btn"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView15"
                android:layout_centerHorizontal="true"
                android:id="@+id/benterloc" />

            <Button
                android:text="Begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:id="@+id/begin_btn"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_below="@+id/energyreq_btn"
                android:layout_centerHorizontal="true"
                android:background="@color/colorAccent"/>

            <Button
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:id="@+id/energyreq_btn"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textSize="24sp"
                android:background="?attr/colorControlHighlight"
                android:textStyle="normal|bold"
                tools:background="?attr/colorBackgroundFloating"
                android:layout_below="@+id/textView8"
                android:layout_centerHorizontal="true" />

            <TableLayout
                android:layout_width="match_parent"
                android:id="@+id/tableinfobuy"
                android:layout_height="400dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:stretchColumns="0,1"
                android:layout_below="@+id/ardbtn">
            </TableLayout>

            <Button
                android:text="TRANSFER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ardbtn"
                android:layout_marginTop="32dp"
                android:layout_below="@+id/begin_btn"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>