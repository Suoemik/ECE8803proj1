<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.suoemi.ece8803proj.PaymentInput">

    <Button
        android:text="Add"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:id="@+id/add"
        android:layout_marginTop="390dp"
        android:layout_marginStart="100dp"
        tools:background="@color/colorAccent"
        tools:textSize="20sp"
        tools:textColor="#hfffff"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="120dp"
        android:background="@color/colorBoxLayer"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/Card">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </HorizontalScrollView>

    //tools:textStyle="bold"

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/CardNumber"
        android:layout_marginTop="124dp"
        android:layout_marginStart="30dp"
        tools:textSize="20sp"
        android:textSize="16sp"
        android:hint="Card Number" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:background="@color/colorBoxLayer"
        android:layout_marginEnd="240dp"
        android:layout_marginStart="10dp"
        android:id="@+id/Month">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </HorizontalScrollView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Enter_mnth"
        android:layout_marginTop="204dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="330dp"
        tools:textSize="20sp"
        android:textSize="16sp"
        android:hint=" MM" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:background="@color/colorBoxLayer"
        android:layout_marginEnd="125dp"
        android:layout_marginStart="125dp"
        android:id="@+id/Year">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </HorizontalScrollView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Enter_year"
        android:layout_marginTop="198dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="120dp"
        tools:textSize="20sp"
        android:textSize="16sp"
        android:hint="  YY" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:background="@color/colorBoxLayer"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="240dp"
        android:id="@+id/CVV">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </HorizontalScrollView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/CVV_text"
        android:layout_marginTop="204dp"
        android:layout_marginStart="270dp"
        tools:textSize="20sp"
        android:textSize="16sp"
        android:hint="CVV" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="280dp"
        android:background="@color/colorBoxLayer"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="190dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </HorizontalScrollView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Zipcode"
        android:layout_marginTop="290dp"
        android:layout_marginStart="250dp"
        tools:textSize="20sp"
        android:textSize="16sp"
        android:hint=" ZIP" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="280dp"
        android:background="@color/colorBoxLayer"
        android:layout_marginEnd="180dp"
        android:layout_marginStart="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </HorizontalScrollView>
    <TextView
        android:text="USA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="300dp"
        android:layout_marginStart="35dp"
        tools:textSize="20sp"
        tools:textColor="#hefefe"/>

    <TextView
        android:text="ACCOUNT DETAILS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="48dp"
        tools:textSize="25sp"
        tools:textColor="#FF1F201F"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    //tools:textStyle="bold"

</RelativeLayout>
