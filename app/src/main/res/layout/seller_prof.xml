<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFF2FEFF">

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/sloc_btn"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/bphone_btn"
        android:layout_alignParentStart="true"
        android:layout_width="400dp" />

    <TextView
        android:text="Location Services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/textView14"
        android:layout_below="@+id/bphone_btn"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/sphone_btn"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/bpass_btn"
        android:layout_alignParentStart="true"
        android:layout_width="400dp" />

    <TextView
        android:text=" Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bpass_btn"
        android:layout_marginTop="17dp"
        android:id="@+id/textView13" />

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/spass_btn"
        android:layout_below="@+id/busern_btn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:layout_width="400dp" />

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/susern_btn"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_width="400dp" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/busern_btn"
        android:layout_alignEnd="@+id/textView10"
        android:layout_marginTop="18dp"
        android:id="@+id/textView11" />

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/df_pyment_btn"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/bloc_btn"
        android:layout_alignParentStart="true"
        android:layout_width="400dp" />

    <TextView
        android:text="Default Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_below="@+id/bloc_btn"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="26dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageButton"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_marginTop="74dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Log out"
        android:id="@+id/splogout_btn"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:layout_height="35dp"
        android:layout_width="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Main"
        android:layout_height="35dp"
        android:id="@+id/spmain_btn"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:layout_width="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>